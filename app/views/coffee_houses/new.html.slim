.row
  .columns
    h2 = title("New Coffee House")

.row
  = simple_form_for(coffee_house) do |f|
    .medium-5.columns
      .form-inputs
        = f.input :name, required: true, autofocus: true
        = f.input :latitude, as: :hidden
        = f.input :longitude, as: :hidden

    .medium-12.columns
      .location-input

      .form-inputs
        = f.input :description, as: :ckeditor

      .form-actions
        = f.button :submit, "Create"
