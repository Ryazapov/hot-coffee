.row
  .columns
    h2 = title("Coffees")

.row
  = simple_form_for(filter_coffee_form, method: :get, url: coffees_path) do |f|
    .form-inputs
      .row
        .medium-2.columns
          = f.input :kind, collection: Coffee.translated_kinds, include_blank: true
        .medium-2.columns
          = f.input :volume_from, as: :integer, min: 0, input_html: { min: 0 }
        .medium-2.columns
          = f.input :volume_to, as: :integer, min: 0, input_html: { min: 0 }
        .medium-2.columns
          = f.input :price_from, as: :float, min: 0, input_html: { min: 0 }
        .medium-2.columns
          = f.input :price_to, as: :float, min: 0, input_html: { min: 0 }
        .medium-2.columns
          = f.button :submit, "Search"

  table
    thead
      tr
        th Name
        th Kind
        th Volume
        th Price
    tbody
      = render coffees
    = paginate coffees
